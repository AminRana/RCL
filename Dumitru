  package Week3;

public class Animal {

    // Method to make a sound
    void makeSound() {
        System.out.println("The animal makes a sound");
    }
}



package Week3;

class Calculator {

    // method with TWO integers
    int add(int a, int b) {
        return a + b;
    }

    // method with THREE integers
    int add(int a, int b, int c) {
        return a + b + c;
    }

    // method with TWO doubles
    double add(double a, double b) {
        return a + b;
    }
}


package Week3;

public class Car {

	String make;  //will be the brand of the car
	String model;  //will be the model of the car
	int year;		//year the car was made


//---These are variables that describe a car---
//---Every car object will have its own values---
	void displayInfo() {
		System.out.println("Make: " + make);
		System.out.println("Model: " + model);
		System.out.println("Year " + year);
		
		//---this method prints the car details
		//--- a method is a block of code that does something
	}
}



package Week3;

 public class Cat extends Animal {

    // Override makeSound()
    void makeSound() {
        System.out.println("The cat meows");
    }
}


package Week3;

public class Dog extends Animal {

    // Override makeSound()
    void makeSound() {
        System.out.println("The dog barks");
    }
}


package Week3;

public class Inventory {

	
	//variables (fields)
	
	String productName;
	int productId;
	double price;
	int quantity;
	
	void ProductDetails(String name, int id, double p) {
		productName = name;
		productId = id;
		price = p;
	}
	
	void StockDetails(int qty) {
		quantity = qty;
	}
	
	void Invoice() {
		double total = price * quantity;
		System.out.println("Total Invoice Amount: £" + total);
	}
	void displayProd() {
		System.out.println("Product Name: " + productName);
		System.out.println("Product ID: " + productId);
		System.out.println("Price: £ " + price);
		System.out.println("Quantity: " + quantity);
	}
}
//----- one class describes what something is (Inventory)
//----- the main class shows how it is used




package Week3;

public class Person {

    // Fields (variables)
    String name;
    int age;

    // Method to display person details
    void displayDetails() {
        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
    }
}



package Week3;

public class Student extends Person {

    // Extra field for Student
    int studentId;

    // Method to display student details
    void displayDetails() {
        System.out.println("Name: " + name);       // inherited
        System.out.println("Age: " + age);         // inherited
        System.out.println("Student ID: " + studentId);
    }
}
 /*extends means inherit
Student gets name and age from Person
Student adds studentId
This is method overriding */
